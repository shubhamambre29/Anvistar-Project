<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <display-name>DXSure CRM</display-name>
    <description>Digital Software Solution CRM System</description>
    
    <!-- Session Configuration -->
    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
        <cookie-config>
            <http-only>true</http-only>
        </cookie-config>
        <timeout>30</timeout>
    </session-config>
    
    <!-- Servlet Mappings -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.dxsure.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.dxsure.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.dxsure.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>com.dxsure.servlet.ClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/client</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>VendorServlet</servlet-name>
        <servlet-class>com.dxsure.servlet.VendorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VendorServlet</servlet-name>
        <url-pattern>/vendor</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>com.dxsure.servlet.PaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PettyCashServlet</servlet-name>
        <servlet-class>com.dxsure.servlet.PettyCashServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PettyCashServlet</servlet-name>
        <url-pattern>/pettycash</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TicketServlet</servlet-name>
        <servlet-class>com.dxsure.servlet.TicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketServlet</servlet-name>
        <url-pattern>/ticket</url-pattern>
    </servlet-mapping>
    
    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>
